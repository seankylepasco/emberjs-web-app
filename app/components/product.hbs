<div>
  <div class='box'>
    <div class='card flex-row'>
      <LinkTo class='card-img-container' @route='item' @model={{@product.id}} >
        <Product::Image @src={{this.productImage}} />
      </LinkTo>
      <div class="card-container">
        <Product::Details @name={{@product.name}} @price={{@product.price}} />
      </div>
    </div>
  </div>
</div>